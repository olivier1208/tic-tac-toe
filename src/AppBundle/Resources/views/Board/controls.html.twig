{% if app.session.get('places') is defined %}
    {% set places = app.session.get('places') %}
{% else %}
    {% set places = [] %}
{% endif %}
{#{% if status =  %}#}
<div class="text-center mx-auto col-3">
    <div class="controls">
        <table class="table table-bordered text-center">
            <tr>
                {% for col in 1..3 %}
                    <td>
                        {% if 0 ~ col - 1 in places %}
                            {% set status = 'd-none' %}
                        {% else %}
                            {% set status = 'd.block' %}
                        {% endif %}
                        <a class="{{ status }}" href="{{ path('play', {'row': 1, 'col': col}) }}">
                            <i class="fas fa-star fa-2x"></i>
                        </a>
                    </td>
                {% endfor %}
            </tr>
            <tr>
                {% for col in 1..3 %}
                    <td>
                        {% if 1 ~ col - 1 in places %}
                            {% set status = 'd-none' %}
                        {% else %}
                            {% set status = 'd.block' %}
                        {% endif %}
                        <a class="{{ status }}" href="{{ path('play', {'row': 2, 'col': col}) }}">
                            <i class="fas fa-star fa-2x"></i>
                        </a>
                    </td>
                {% endfor %}
            </tr>
            <tr>
                {% for col in 1..3 %}
                    <td>
                        {% if 2 ~ col - 1 in places %}
                            {% set status = 'd-none' %}
                        {% else %}
                            {% set status = 'd.block' %}
                        {% endif %}
                        <a class="{{ status }}" href="{{ path('play', {'row': 3, 'col': col}) }}">
                            <i class="fas fa-star fa-2x"></i>
                        </a>
                    </td>
                {% endfor %}
            </tr>
        </table>
    </div>
</div>